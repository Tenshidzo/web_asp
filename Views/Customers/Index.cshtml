@model IEnumerable<web_asp.Models.Customer>

<h2>Customers</h2>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>
                    <a href="@Url.Action("Details", new { id = customer.Id })">Details</a> |
                    <a href="@Url.Action("Edit", new { id = customer.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = customer.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
